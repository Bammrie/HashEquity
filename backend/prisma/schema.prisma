generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  walletAddress String   @unique
  email         String?  @unique
  hashBalance   Decimal  @default(0) @db.Decimal(36, 18)
  unmintedHash  Decimal  @default(0) @db.Decimal(36, 18)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model ObjectStat {
  id        String   @id @default(uuid())
  objectId  String   @unique
  name      String?
  image     String?
  destroyed Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
